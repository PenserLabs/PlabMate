<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_large"
    android:orientation="vertical"
    android:layout_weight="2">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:src="@drawable/respiratory"
        android:id="@+id/category_IV"    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:hint="Cardiology"
        android:textSize="23sp"
        android:textColor="#208ed9"
        android:id="@+id/textview2"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:paddingVertical="4dp"
        android:layout_below="@+id/category_IV"
        app:layout_constraintEnd_toEndOf="@+id/category_IV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_IV"


        />

    </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>